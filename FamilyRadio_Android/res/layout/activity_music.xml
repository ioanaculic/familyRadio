<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    
	<RelativeLayout 
	    	android:id="@+id/ll_activity_music"
	        android:layout_alignParentTop="true"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        >
	     <Button 
	        android:id="@+id/next_activity_music"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:layout_margin="10dip"
	        android:text="@string/next"
        />

	     <Button
	         android:id="@+id/leave_activity_music"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:layout_alignParentLeft="true"
	         android:layout_margin="10dip"
	         android:text="@string/leave" />

	</RelativeLayout>
    
     <TextView
        android:id="@+id/track_activity_music"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_activity_music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dip"
        />
    
    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:background="#ffffff"
        android:layout_below="@+id/track_activity_music"
        android:layout_margin="10dip"
        >
    </ListView>
  
</RelativeLayout>
